  "paths": {
    "/admin/register": {
      "post": {
        "summary": "Registrar Super Admin",
        "operationId": "registerSuper",
        "tags": [
          "Admin"
        ],
        "requestBody": {
          "description": "Parâmetros para cadastro do Super Admin para registro",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Nome do Super Admin",
                    "example": "Pedro Machado"
                  },
                  "email": {
                    "type": "string",
                    "description": "Email do Super Admin",
                    "example": "pedro@exemplo.com"
                  },
                  "password": {
                    "type": "string",
                    "description": "Senha do Super Admin",
                    "example": "senhaSegura123"
                  },
                  "permission": {
                    "type": "string",
                    "description": "Permissão do usuário (deve ser 'SUPER')",
                    "example": "SUPER"
                  }
                },
                "required": [
                  "name",
                  "email",
                  "password",
                  "permission"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Admin registrado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Super Admin registrado com sucesso!"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Erro na validação ou na solicitação",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "message": {
                      "type": "string",
                      "example": "Erro ao registrar o Super Admin. Verifique os dados fornecidos."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/admin/login": {
      "post": {
        "summary": "Login de Admin",
        "operationId": "login",
        "tags": [
          "Admin"
        ],
        "requestBody": {
          "description": "Parâmetros para realizar login",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "description": "Email para login",
                    "example": "teste@escalaweb.com.br"
                  },
                  "password": {
                    "type": "string",
                    "description": "Senha do Super Admin",
                    "example": "123"
                  }
                },
                "required": [
                  "email",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login realizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Login realizado com sucesso!"
                    },
                    "token": {
                      "type": "string",
                      "description": "Token de autenticação do Admin",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VyX2lkIjoxMjM0NTY3ODkwLCJleHBpcnkiOiJjYXNlX2FzX2V4cGVyaWVuY2UifQ.xm2WhtJxd6fOmlJ-2gHaFO9jjF"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Erro de autenticação",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "message": {
                      "type": "string",
                      "example": "Campos de email ou senha inválidos."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/admin/forget-password": {
      "post": {
        "summary": "Esquecer Senha do Admin",
        "operationId": "forgetAccess",
        "tags": [
          "Admin"
        ],
        "requestBody": {
          "description": "E-mail para recuperação de senha",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "description": "E-mail do usuário para recuperação",
                    "example": "teste@escalaweb.com.br"
                  }
                },
                "required": [
                  "email"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "E-mail de recuperação enviado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Foi enviado um link de recuperação para o email."
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Erro na recuperação de senha",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "message": {
                      "type": "string",
                      "example": "Usuário não encontrado."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/admin/reset-password": {
      "put": {
        "summary": "Redefinir Senha do Admin",
        "operationId": "resetPassword",
        "tags": [
          "Admin"
        ],
        "requestBody": {
          "description": "Dados para redefinir a senha do usuário",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "token": {
                    "type": "string",
                    "description": "Token de autenticação recebido via e-mail",
                    "example": "eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..."
                  },
                  "password": {
                    "type": "string",
                    "description": "Nova senha do usuário",
                    "example": "novaSenha123"
                  }
                },
                "required": [
                  "token",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Senha redefinida com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Senha redefinida com sucesso!"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Erro na redefinição da senha",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "message": {
                      "type": "string",
                      "example": "Token inválido ou expirado."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
