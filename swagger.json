{
  "openapi": "3.0.0",
  "info": {
    "title": "API do Projeto",
    "description": "Documentação das rotas da API do projeto",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://192.168.15.19/api-php"
    }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
