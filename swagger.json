    "/categories/update-category": {
      "put": {
        "summary": "Atualizar categoria",
        "operationId": "updatedCategory",
        "tags": [
          "Categories"
        ],
        "security": [
          {
            "BearerAuth": []
          }
        ],"requestBody": {
          "description": "Dados para atualizar categoria",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id_category": {
                    "type": "id_category",
                    "description": "Id da categoria ",
                    "example": 1
                  },
                  "name": {
                    "type": "string",
                    "description": "Nome da Categoria",
                    "example": "Geladeiras"
                  },
                  "description":{
                    "type": "string",
                    "description": "Descrição da Categoria",
                    "example": "Eletrodomésticos para resfriamento"
                  },
                  "parent_category": {
                    "type": "integer",
                    "nullable": true,
                    "description": "ID da categoria pai. Se for null, será uma categoria principal.",
                    "example": null
                  }
                },
                "required": [
                  "id_category",
                  "name",
                  "description"
                ]
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Foi atualizado com sucesso"
          },
          "400":{
            "description": "Não foi possível atualizar"
          },
          "401": {
            "description": "Não autorizado. Token de autenticação inválido ou ausente.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "message": {
                      "type": "string",
                      "example": "Token inválido ou não fornecido."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/categories/delete": {
      "delete": {
        "summary": "Deletar Categoria",
        "operationId": "deleteCategory",
        "tags": [
